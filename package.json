{
  "name": "tenders-new-app",
  "private": true,
  "version": "0.0.3",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "מכרזים בענף הדפוס",
  "author": "inna",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server.cjs",
    "electron": "electron .",
    "app": "concurrently -k \"npm:server\" \"npm:dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "framer-motion": "^12.23.24",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "node-fetch": "^3.3.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.4.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.dot.tenders.print",
    "productName": "מכרזים בענף הדפוס",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "server.cjs",
      "scrape-tenders.cjs",
      "tenders-data.json",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "app/dist"
      },
      {
        "from": "server.cjs",
        "to": "app/server.cjs"
      },
      {
        "from": "scrape-tenders.cjs",
        "to": "app/scrape-tenders.cjs"
      },
      {
        "from": "tenders-data.json",
        "to": "app/tenders-data.json"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.business"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Danak2014",
        "repo": "tenders-print-app",
        "releaseType": "release"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
